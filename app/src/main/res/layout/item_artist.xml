<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="artist"
            type="com.example.tonezone.network.Artist" />
        <variable
            name="clickListener"
            type="com.example.tonezone.adapter.LibraryAdapter.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:onClick="@{() -> clickListener.onClick(artist)}"
        android:orientation="horizontal">
        <!--        android:onClick="@{() -> clickListener.onClick(playlist)}"-->

        <androidx.cardview.widget.CardView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="64dp"
            android:elevation="0dp"
        >

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            listImageUrl="@{artist.images}"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            />
<!--            listImageUrl="@{artist.images}"
-->
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/playlist_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            >

        <TextView
            android:id="@+id/name_playlist"
            android:layout_width="290sp"
            android:layout_height="20dp"
            android:text="@{artist.name}"
            android:textSize="16sp"
            android:layout_marginTop="8dp"

            />

        <LinearLayout
            android:id="@+id/nested_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >

            <ImageView
                android:id="@+id/pin"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_pin"
                app:tint="?attr/colorOnPrimary"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:id="@+id/type"
                android:layout_width="290sp"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:text="@{artist.type}"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>